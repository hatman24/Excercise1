@model HomeViewModel
@{
    ViewData["Title"] = "Exercise 1";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row">
        <form>
            <p>Please enter an amount:</p>
            <div class="form-group">
                @Html.TextBoxFor(HomeViewModel => HomeViewModel.amountInput)

